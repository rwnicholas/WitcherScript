# Math utilities for quick calculations
# Import this grimoire for common math operations

aard factorial(n) {
    igni n <= 1 {
        hunt 1
    }
    hunt n * factorial(n - 1)
}

aard is_even(num) {
    hunt (num % 2) == 0
}

aard is_odd(num) {
    hunt (num % 2) != 0
}

aard power(base, exp) {
    igni exp == 0 {
        hunt 1
    }
    hunt base * power(base, exp - 1)
}

aard absolute_value(num) {
    igni num < 0 {
        hunt -num
    }
    hunt num
}
