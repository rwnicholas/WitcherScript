{
  "Variable Declaration": {
    "prefix": "contract",
    "body": "contract ${1:name} = ${2:value}",
    "description": "Declare a variable (take a contract)"
  },
  "Constant Declaration": {
    "prefix": "mutation",
    "body": "mutation ${1:NAME} = ${2:value}",
    "description": "Declare a constant (permanent mutation)"
  },
  "Import Grimoire": {
    "prefix": "grimoire",
    "body": "grimoire \"${1:lib/file.witcher}\"",
    "description": "Import functions from another .witcher file (GRIMOIRE)"
  },
  "If Statement": {
    "prefix": "igni",
    "body": "igni ${1:condition} {\n\t${2:// code}\n} elixir {\n\t${3:// alternative}\n}",
    "description": "If statement (IGNI - Fire Sign)"
  },
  "If Only": {
    "prefix": "igni-only",
    "body": "igni ${1:condition} {\n\t${2:// code}\n}",
    "description": "If statement without else"
  },
  "While Loop": {
    "prefix": "quen",
    "body": "quen ${1:condition} {\n\t${2:// code}\n}",
    "description": "While loop (QUEN - Protection Sign)"
  },
  "For Loop": {
    "prefix": "yrden",
    "body": "yrden ${1:item} -> ${2:array} {\n\t${3:// code}\n}",
    "description": "For loop (YRDEN - Slow Time Sign)"
  },
  "Function Definition": {
    "prefix": "aard",
    "body": "aard ${1:function_name}(${2:params}) {\n\t${3:// code}\n\thunt ${4:result}\n}",
    "description": "Function definition (AARD - Blast Sign)"
  },
  "Function Call": {
    "prefix": "call",
    "body": "${1:function_name}(${2:args})",
    "description": "Function call"
  },
  "Return Statement": {
    "prefix": "hunt",
    "body": "hunt ${1:value}",
    "description": "Return from function (HUNT)"
  },
  "Print Output": {
    "prefix": "print",
    "body": "medallion(${1:value})",
    "description": "Print output (MEDALLION)"
  },
  "Array Literal": {
    "prefix": "array",
    "body": "[${1:item1}, ${2:item2}, ${3:item3}]",
    "description": "Create an array (Bestiary)"
  },
  "Boolean True": {
    "prefix": "true",
    "body": "truth",
    "description": "Boolean true value"
  },
  "Boolean False": {
    "prefix": "false",
    "body": "falsehood",
    "description": "Boolean false value"
  },
  "Read Input": {
    "prefix": "input",
    "body": "contract ${1:name} = sigh(${2:\"prompt\"})",
    "description": "Read user input (SIGH)"
  },
  "Array Length": {
    "prefix": "len",
    "body": "monster_count(${1:array})",
    "description": "Get array length"
  },
  "Array Append": {
    "prefix": "append",
    "body": "add_to_bestiary(${1:array}, ${2:value})",
    "description": "Append to array"
  },
  "Type Info": {
    "prefix": "typeof",
    "body": "hunter_instinct(${1:value})",
    "description": "Get type information"
  },
  "String Repeat": {
    "prefix": "repeat",
    "body": "witcher_speed(${1:\"text\"}, ${2:times})",
    "description": "Repeat string"
  },
  "Addition": {
    "prefix": "+",
    "body": "${1:a} + ${2:b}",
    "description": "Addition or string concatenation"
  },
  "Subtraction": {
    "prefix": "-",
    "body": "${1:a} - ${2:b}",
    "description": "Subtraction"
  },
  "Multiplication": {
    "prefix": "*",
    "body": "${1:a} * ${2:b}",
    "description": "Multiplication"
  },
  "Division": {
    "prefix": "/",
    "body": "${1:a} / ${2:b}",
    "description": "Division"
  },
  "Modulo": {
    "prefix": "%",
    "body": "${1:a} % ${2:b}",
    "description": "Modulo (remainder)"
  },
  "Equal Comparison": {
    "prefix": "==",
    "body": "${1:a} == ${2:b}",
    "description": "Equal comparison"
  },
  "Not Equal Comparison": {
    "prefix": "!=",
    "body": "${1:a} != ${2:b}",
    "description": "Not equal comparison"
  },
  "Greater Than": {
    "prefix": ">",
    "body": "${1:a} > ${2:b}",
    "description": "Greater than comparison"
  },
  "Less Than": {
    "prefix": "<",
    "body": "${1:a} < ${2:b}",
    "description": "Less than comparison"
  }
}
