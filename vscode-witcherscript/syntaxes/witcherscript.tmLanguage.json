{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "WitcherScript",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#builtins"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#punctuation"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.witcher",
          "match": "#.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.witcher",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.witcher",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.witcher",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.witcher",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.witcher",
          "match": "\\b([0-9]+\\.?[0-9]*|\\.[0-9]+)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.witcher",
          "match": "\\b(igni|quen|yrden|aard|axii|elixir|hunt|contract|mutation|medallion|grimoire)\\b"
        },
        {
          "name": "constant.language.witcher",
          "match": "\\b(truth|falsehood)\\b"
        },
        {
          "name": "keyword.operator.witcher",
          "match": "\\b(and|or|not)\\b"
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.builtin.witcher",
          "match": "\\b(medallion|sigh|witcher_speed|monster_count|add_to_bestiary|hunter_instinct|potion_effect)\\b(?=\\s*\\()"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.witcher",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.comparison.witcher",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.assignment.witcher",
          "match": "(=)"
        },
        {
          "name": "keyword.operator.arrow.witcher",
          "match": "(->)"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.bracket.witcher",
          "match": "[\\[\\]{}()]"
        },
        {
          "name": "punctuation.separator.witcher",
          "match": "[,;]"
        }
      ]
    }
  },
  "scopeName": "source.witcher"
}
