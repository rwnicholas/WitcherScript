{
  "files.associations": {
    "*.witcher": "witcherscript"
  },
  "[witcherscript]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.autoIndent": "full",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": false,
    "editor.defaultFormatter": null
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "keyword.control.witcher",
        "settings": {
          "foreground": "#569cd6",
          "fontStyle": "bold"
        }
      },
      {
        "scope": "support.function.builtin.witcher",
        "settings": {
          "foreground": "#dcdcaa"
        }
      },
      {
        "scope": "constant.language.witcher",
        "settings": {
          "foreground": "#4ec9b0",
          "fontStyle": "bold"
        }
      },
      {
        "scope": "comment.line.number-sign.witcher",
        "settings": {
          "foreground": "#6a9955"
        }
      }
    ]
  }
}
